{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "dedicated",
    "clear": true
  },
  "tasks": [
    {
      "label": "SO: Render Diagrams (Docker)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\render_diagrams_docker.ps1"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "SO: Export PDF (Docker)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\scripts\\export_pdf_docker.ps1"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "SO: Build PDF (Docker)",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "& \"${workspaceFolder}\\scripts\\render_diagrams_docker.ps1\"; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }; & \"${workspaceFolder}\\scripts\\export_pdf_docker.ps1\"; if ($LASTEXITCODE -ne 0) { exit $LASTEXITCODE }"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "SO: Clean Build Outputs",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue \"${workspaceFolder}\\docs\\build\\tmp\"; Remove-Item -Recurse -Force -ErrorAction SilentlyContinue \"${workspaceFolder}\\docs\\build\\pdf\"; Remove-Item -Recurse -Force -ErrorAction SilentlyContinue \"${workspaceFolder}\\docs\\03_architecture\\diagrams\\out\""
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "SO: Open Generated PDF",
      "type": "shell",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "Invoke-Item \"${workspaceFolder}\\docs\\build\\pdf\\Full_Doc.pdf\""
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    }
  ]
}
