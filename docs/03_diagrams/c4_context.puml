@startuml C4_Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title System Context Diagram - Sports Booking Platform

LAYOUT_WITH_LEGEND()

Person(player, "Player", "Discovers and books sports\nlessons, matches, and tournaments")

Person(coach, "Coach", "Creates, publishes, and manages\nsports activities")

Person(venueOp, "Venue Operator", "Manages venues and\ntheir availability")

Person(admin, "Platform Administrator", "Manages platform configuration\nand oversight")

System(sbp, "Sports Booking Platform", "Central hub for organizing, discovering,\nand booking sports activities")

System_Ext(payment, "Payment Provider", "Processes optional payments\nfor activities")

System_Ext(notification, "Notification Service", "Sends notifications for bookings,\nchanges, and cancellations")

Rel(player, sbp, "uses to discover and book activities")

Rel(coach, sbp, "uses to create and manage activities")

Rel(venueOp, sbp, "uses to manage venues and availability")

Rel(admin, sbp, "administers platform")

Rel(sbp, payment, "integrates with for payment processing")

Rel(sbp, notification, "integrates with for notifications")

@enduml
