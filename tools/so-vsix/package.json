{
  "name": "so-vsix",
  "displayName": "SO Workspace",
  "description": "Chat participant for SO workspace management",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/zthanos/so-workspace.git"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onCommand:so-workspace.obj.generate",
    "onCommand:so-workspace.obj.eval",
    "onCommand:so-workspace.obj.patch",
    "onCommand:so-workspace.obj.recheck",
    "onCommand:so-workspace.renderDiagrams",
    "onCommand:so-workspace.buildPdf",
    "onCommand:so-workspace.req.generate",
    "onCommand:so-workspace.req.eval",
    "onCommand:so-workspace.req.patch",
    "onCommand:so-workspace.req.recheck",
    "onCommand:so-workspace.diagram.eval",
    "onCommand:so-workspace.diagram.patch",
    "onCommand:so-workspace.diagram.recheck",
    "onCommand:so-workspace.so.generate",
    "onCommand:so-workspace.so.eval",
    "onCommand:so-workspace.so.patch",
    "onCommand:so-workspace.so.finalReview",
    "onCommand:so-workspace.exportPdf",
    "onCommand:so-workspace.cleanBuildOutputs",
    "onCommand:so-workspace.openGeneratedPdf"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "SO Workspace Diagrams",
      "properties": {
        "so-workspace.diagrams.sourceDirectory": {
          "type": "string",
          "default": "docs/03_architecture/diagrams/src",
          "description": "Source directory containing diagram files (.mmd and .puml files)",
          "order": 1
        },
        "so-workspace.diagrams.outputDirectory": {
          "type": "string",
          "default": "docs/03_architecture/diagrams/out",
          "description": "Output directory for rendered SVG files",
          "order": 2
        },
        "so-workspace.diagrams.plantUmlServerUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "PlantUML server URL (plantuml-wasm server)",
          "pattern": "^https?://.*",
          "order": 3
        },
        "so-workspace.diagrams.concurrencyLimit": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of concurrent rendering operations",
          "order": 4
        }
      }
    },
    "chatParticipants": [
      {
        "id": "so-workspace.so",
        "name": "so",
        "description": "SO workspace documentation and build assistant",
        "isSticky": true
      }
    ],
    "commands": [
      {
        "command": "so-workspace.obj.generate",
        "title": "SO: Objectives Generate (Open Chat)"
      },
      {
        "command": "so-workspace.obj.eval",
        "title": "SO: Objectives Evaluate (Open Chat)"
      },
      {
        "command": "so-workspace.obj.patch",
        "title": "SO: Objectives Patch (Open Chat)"
      },
      {
        "command": "so-workspace.obj.recheck",
        "title": "SO: Objectives Recheck (Open Chat)"
      },
      {
        "command": "so-workspace.renderDiagrams",
        "title": "SO: Render Diagrams (Local)"
      },
      {
        "command": "so-workspace.buildPdf",
        "title": "SO: Build PDF (Docker)"
      },
      {
        "command": "so-workspace.req.generate",
        "title": "SO: Requirements Inventory Generate (Open Chat)"
      },
      {
        "command": "so-workspace.req.eval",
        "title": "SO: Requirements Inventory Evaluate (Open Chat)"
      },
      {
        "command": "so-workspace.req.patch",
        "title": "SO: Requirements Inventory Patch (Open Chat)"
      },
      {
        "command": "so-workspace.req.recheck",
        "title": "SO: Requirements Inventory Recheck (Open Chat)"
      },
      {
        "command": "so-workspace.diagram.eval",
        "title": "SO: Diagram Evaluate (Select Diagram)"
      },
      {
        "command": "so-workspace.diagram.patch",
        "title": "SO: Diagram Patch (Select Diagram)"
      },
      {
        "command": "so-workspace.diagram.recheck",
        "title": "SO: Diagram Recheck (Select Diagram)"
      },
      {
        "command": "so-workspace.so.generate",
        "title": "SO: Solution Outline Generate (Open Chat)"
      },
      {
        "command": "so-workspace.so.eval",
        "title": "SO: Solution Outline Evaluate (Objectives + Diagrams)"
      },
      {
        "command": "so-workspace.so.patch",
        "title": "SO: Solution Outline Patch (Open Chat)"
      },
      {
        "command": "so-workspace.so.finalReview",
        "title": "SO: Solution Outline Final Review (Requirements Inventory)"
      },
      {
        "command": "so-workspace.exportPdf",
        "title": "SO: Export PDF (Docker)"
      },
      {
        "command": "so-workspace.cleanBuildOutputs",
        "title": "SO: Clean Build Outputs"
      },
      {
        "command": "so-workspace.openGeneratedPdf",
        "title": "SO: Open Generated PDF"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-scripts",
    "copy-scripts": "node -e \"const fs = require('fs'); const path = require('path'); const src = path.join('..', '..', 'scripts'); const dest = 'scripts'; if (fs.existsSync(src)) { fs.cpSync(src, dest, { recursive: true }); console.log('Scripts copied successfully'); } else { console.warn('Warning: /scripts directory not found'); }\"",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/mermaid": "^9.1.0",
    "@types/node": "^25.1.0",
    "@types/plantuml-encoder": "^1.4.2",
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.7.1",
    "fast-check": "^4.5.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "mermaid": "^11.12.2",
    "plantuml-encoder": "^1.4.0"
  }
}
